@using ToDoList.Models;

<h1>To Do List</h1>
<hr>

<h2>Edit Category: @Model.Name</h2>

<form action="/categories/@Model.Id" method="post">
  <label for="newName">Name:</label>
  <input type="text" name="newName" value="@Model.Name">
  <button type="submit">Edit</button>
</form>

<h4><a href="/categories">Return to previous page</a></h4>
